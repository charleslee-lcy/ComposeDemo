<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:background="@mipmap/speech_float_window_bg"
        app:layout_constraintBottom_toBottomOf="@+id/cl_window"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_window"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view_bg"
        app:layout_constraintStart_toStartOf="@+id/view_bg"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/speech_float_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/speech_float_msg_bg"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:text="我正在听"
            android:textColor="#ff2e3f5b"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon"
            app:layout_constraintStart_toEndOf="@+id/icon" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_status"
            app:layout_constraintEnd_toEndOf="@+id/cl_window"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toEndOf="@+id/tv_status"
            app:layout_constraintTop_toTopOf="@+id/tv_status">

            <ImageView
                android:id="@+id/iv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/speech_float_reset"
                app:layout_constraintBottom_toBottomOf="@+id/tv_status"
                app:layout_constraintEnd_toStartOf="@+id/iv_setting"
                app:layout_constraintTop_toTopOf="@+id/tv_status" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:alpha="0.5"
                android:background="#2E3F5B" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/speech_float_setting"
                app:layout_constraintBottom_toBottomOf="@+id/tv_status"
                app:layout_constraintEnd_toStartOf="@+id/iv_close"
                app:layout_constraintTop_toTopOf="@+id/tv_status" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:alpha="0.5"
                android:background="#2E3F5B" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/speech_float_close"
                app:layout_constraintBottom_toBottomOf="@+id/tv_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_status" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-10dp"
            android:background="@mipmap/speech_float_content_bg"
            android:maxHeight="150dp"
            android:minHeight="120dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_result"
            app:layout_constraintTop_toTopOf="@+id/tv_result">

            <TextView
                android:id="@+id/tv_hint_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="你可以这样说"
                android:textColor="#ff2e3f5b"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/tv_hint_content"
                android:layout_width="160dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="“帮我播放今日早报”"
                android:textColor="#ff2e3f5b"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hint_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.charleslee.composedemo.speech.window.AudioTextView
            android:id="@+id/tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3dp"
            android:lines="4"
            android:padding="25dp"
            android:text="在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听我在听"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_morning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/speech_float_btn"
        android:gravity="center"
        android:text="封面早晚报"
        android:textColor="#ff2e3f5b"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="335:96"
        app:layout_constraintEnd_toStartOf="@+id/tv_one_day"
        app:layout_constraintStart_toStartOf="@+id/cl_window"
        app:layout_constraintTop_toBottomOf="@+id/cl_window" />

    <TextView
        android:id="@+id/tv_one_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@mipmap/speech_float_btn"
        android:gravity="center"
        android:text="24小时新闻"
        android:textColor="#ff2e3f5b"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_morning"
        app:layout_constraintDimensionRatio="335:96"
        app:layout_constraintEnd_toStartOf="@+id/tv_one_hour"
        app:layout_constraintStart_toEndOf="@+id/tv_morning" />

    <TextView
        android:id="@+id/tv_one_hour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:background="@mipmap/speech_float_btn"
        android:gravity="center"
        android:text="1小时新闻"
        android:textColor="#ff2e3f5b"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_morning"
        app:layout_constraintDimensionRatio="335:96"
        app:layout_constraintEnd_toEndOf="@+id/cl_window"
        app:layout_constraintStart_toEndOf="@+id/tv_one_day" />
</androidx.constraintlayout.widget.ConstraintLayout>